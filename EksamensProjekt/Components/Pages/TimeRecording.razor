@page "/timerecords/"
@using EksamensProjekt.Models
@inject HttpClient Http
@inject Blazored.LocalStorage.ILocalStorageService LS
@rendermode InteractiveServer

<h3>Mine tidsregistreringer</h3>

@if (!loaded)
{
    <p>Indlæser...</p>
}
else if (records == null || !records.Any())
{
    <p>Ingen tidsregistreringer fundet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Task</th>
                <th>Bruger</th>
                <th>Start</th>
                <th>Slut</th>
                <th>Forbrugt tid</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rec in records)
            {
                <tr>
                    <td>@rec.TaskName</td>
                    <td>@rec.UserName</td>
                    <td>@rec.StartTime?.ToLocalTime().ToString("dd-MM-yyyy HH:mm")</td>
                    <td>@rec.EndTime?.ToLocalTime().ToString("dd-MM-yyyy HH:mm")</td>
                    <td>@Calculate(rec.StartTime, rec.EndTime)</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mb-3">
    <select class="form-select mb-2" @bind="selectedTaskId">
        <option value="0">--Vælg Opgave--</option>
        @if (userTasks != null)
        {
            @foreach (var task in userTasks)
            {
                <option value="@task.TaskId">@task.TaskName</option>
            }
        }
    </select>


    <button class="btn btn-success me-2" @onclick="Start">▶️ Start tid</button>
    <button class="btn btn-danger" @onclick="Stop">⏹ Stop tid</button>
</div>

@code {
    private List<TimeRecordingModel>? records;
    private List<UsersTasksModel>? userTasks;
    private int userId;
    private int selectedTaskId;
    private bool loaded = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            userId = await LS.GetItemAsync<int>("userid");
            await LoadData();
            loaded = true;
            StateHasChanged();
        }
    }

    private async Task LoadData()
    {
        records = await Http.GetFromJsonAsync<List<TimeRecordingModel>>($"api/timerecords/user/{userId}");
        userTasks = await Http.GetFromJsonAsync<List<UsersTasksModel>>($"api/userstasks/getuserstasks/{userId}");
    }

    private string Calculate(DateTime? start, DateTime? end)
    {
        if (start == null || end == null) return "-";
        var diff = end.Value - start.Value;
        return $"{(int)diff.TotalHours} t {diff.Minutes} min {diff.Seconds} s";
    }

    private async Task Start()
    {
        if (selectedTaskId == 0) return;
        await Http.PostAsync($"api/timerecords/startrecord/{userId}/{selectedTaskId}", null);
        await Reload();
    }

    private async Task Stop()
    {
        if (selectedTaskId == 0) return;
        await Http.PostAsync($"api/timerecords/endrecord/{userId}/{selectedTaskId}", null);
        await Reload();
    }

    private async Task Reload()
    {
        await LoadData();
        StateHasChanged();
    }
}
