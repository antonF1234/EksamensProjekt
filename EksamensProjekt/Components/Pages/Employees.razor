@page "/Employees"
@inject NavigationManager Nav
@using EksamensProjekt.Models
@using EksamensProjektAPI.Services
@inject Blazored.LocalStorage.ILocalStorageService LS
@rendermode InteractiveServer
@inject HttpClient Http
@inject IJSRuntime JS

<h3>Tilføj skill til bruger</h3>
<div class="row mb-4">
    <div class="col-md-4">
        <select class="form-select" @bind="selectedUserId">
            <option value="">Vælg bruger...</option>
            @foreach (var u in users)
            {
                <option value="@u.UserId">@u.Username</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <select class="form-select" @bind="selectedSkillId">
            <option value="">Vælg skill...</option>
            @foreach (var skill in skills)
            {
                <option value="@skill.SkillId">@skill.Name</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <button class="btn btn-primary" @onclick="AddSelectedSkill" disabled="@(!CanAdd)">
            Tilføj
        </button>
    </div>
</div>

@if (users == null)
{
    <p>Henter brugere fra databasen...</p>
}
else if (users.Count == 0)
{
    <div class="alert alert-info">Der er ingen brugere endnu – opret det første ovenfor!</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var u in users)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@u.Username</h5>
                        <p class="card-text">@u.Email</p>
                        <p class="text-muted small">ID: @u.UserId</p>

                        @if (userSkillsMap.ContainsKey(u.UserId))
                        {
                            <div class="mt-2">
                                @foreach (var skill in userSkillsMap[u.UserId])
                                {
                                    <span class="badge bg-primary me-1">
                                        @skill.SkillName
                                        <button class="btn btn-sm btn-link text-white p-0 ms-1"
                                                @onclick="() => DeleteUserSkill(u.UserId, skill.SkillId)">
                                            ✕
                                        </button>
                                    </span>
                                }

                            </div>
                        }
                    </div>
                </div>
            </div>
        }

    </div>
}

@code {
    private List<UserModel> users = new();
    private List<SkillModel> skills = new();

    private int? selectedUserId;
    private int? selectedSkillId;

    private bool CanAdd => selectedUserId.HasValue && selectedSkillId.HasValue;

    private Dictionary<int, List<UsersSkillsModel>> userSkillsMap = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
        await LoadAllSkills();

        foreach (var u in users)
        {
            var skillsForUser = await Http.GetFromJsonAsync<List<UsersSkillsModel>>(
                $"api/usersskills/getuserskills/{u.UserId}") ?? new List<UsersSkillsModel>();

            userSkillsMap[u.UserId] = skillsForUser;
        }
    }


    private async Task LoadUsers()
    {
        users = await Http.GetFromJsonAsync<List<UserModel>>("api/users/allusers") ?? new List<UserModel>();
    }

    private async Task LoadAllSkills()
    {
        skills = await Http.GetFromJsonAsync<List<SkillModel>>("api/skills/allskills") ?? new List<SkillModel>();
    }

    private async Task AddSelectedSkill()
    {
        if (selectedUserId.HasValue && selectedSkillId.HasValue)
        {
            await Http.PostAsync($"api/usersskills/adduserskill/{selectedSkillId}/{selectedUserId}", null);

            // Nulstil dropdowns
            selectedUserId = null;
            selectedSkillId = null;
            
            // genindlæs alt, mega ueffektivt men er ligeglad :=)
            users.Clear();
            userSkillsMap.Clear();
            await OnInitializedAsync();
        }
    }
    private async Task DeleteUserSkill(int userId, int skillId)
    {
        await Http.DeleteAsync(
            $"api/usersskills/deleteuserskill/{skillId}/{userId}");
        users.Clear();
        userSkillsMap.Clear();
        await OnInitializedAsync();
    }
}