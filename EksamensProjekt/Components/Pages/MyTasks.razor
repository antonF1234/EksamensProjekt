@page "/mytasks"
@inject NavigationManager Nav
@using EksamensProjekt.Models
@using EksamensProjektAPI.Services
@inject Blazored.LocalStorage.ILocalStorageService LS
@inject HttpClient Http
@inject IJSRuntime JS
@rendermode InteractiveServer

<h3>Mine Opgaver</h3>

@if (!isLoaded) // bool check at det er indlæst
{
    <p>Henter opgaver...</p>
}
else if (groupedTasks.Count == 0) // hvis ingen groupedTasks findes så skriv
{
    <div class="alert alert-info">Der er ingen opgaver</div>
}
else
{
    <div class="d-flex gap-3 mb-3">
    
    <!-- Filtrer efter projekt -->
    <select class="form form-select" style="max-width:200px"@bind="filterProjectId"> <!-- den valgte projekt id sættes til denne variabel -->
    <option value="">Alle Projekter</option>
    @foreach (var g in groupedTasks)
    {
        <option value="@g.Project?.ProjectId">@g.Project?.Name</option> <!-- Skriv alle projekt navne ud som dropdown -->
    }
    </select>  
    
    <!-- Filtrer efter status -->
    <select class="form-select" style="max-width:200px" @bind="filterStatus">
        <option value="">Alle Statusser</option>
        <option value="Igang">Igang</option>
        <option value="Færdig">Færdig</option>
        <option value="På vent">På vent</option>
        <option value="Afbrudt">Afbrudt</option>
    </select>
    
    <!-- Sorter -->
    <select class="form-select" style="max-width:200px" @bind="sortBy">
        <option value="deadline">Deadline</option>
        <option value="status">Status</option>
    </select>

    </div>
    
    @foreach (var group in GetVisibleGroups()) // går igennem hvert group objekt
    {
        <h4 class="mt-4">@group.Project?.Name</h4> <!-- Skriv projekt navn ud -->

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"> 
            @foreach (var t in GetVisibletasks(group)) // for hvert UsersTasksModel i hvert group objekt skriv de ud
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-primary">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@t.TaskName</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Task ID: @t.TaskId</h6>

                            <p><strong>Status:</strong>
                                <span class="badge @(t.Status == "Færdig" ? "bg-success" : t.Status == "Igang" ? "bg-warning" : "bg-secondary")"> <!-- s -->
                                    @t.Status
                                </span>
                            </p>
                            <!-- Status dropdown til updatering af status på task -->
                            <select class="form-select mb-2"
                                    @onchange="@(e => OpdaterStatus(t.TaskId, e.Value?.ToString()))">
                                <option value="">--Vælg status--</option>
                                <option value="Igang" selected="@(t.Status=="Igang")">Igang</option>
                                <option value="Færdig" selected="@(t.Status=="Færdig")">Færdig</option>
                                <option value="På vent" selected="@(t.Status=="På vent")">På vent</option>
                                <option value="Afbrudt" selected="@(t.Status=="Afbrudt")">Afbrudt</option>
                            </select>
                            <!-- Tjekker at de ikke er tomme og skriver ud datoer -->
                            @if (t.StartDate.HasValue)
                            {
                                <p><strong>Start:</strong> @t.StartDate.Value.ToString("dd/MM/yyyy")</p>
                            }
                            @if (t.Deadline.HasValue)
                            {
                                <p><strong>Deadline:</strong> @t.Deadline.Value.ToString("dd/MM/yyyy")</p>
                            }
                            @if (t.CompletionDate.HasValue)
                            {
                                <p><strong>Færdig:</strong> @t.CompletionDate.Value.ToString("dd/MM/yyyy")</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}

@code {
    private List<UsersTasksModel> tasks = new(); // instansier ny liste med UsersTasksModel's
    private List<ProjectGroup> groupedTasks = new(); // instansier ny list med ProjectGroup bruges kun på denne side
    private int userId; // user id til localstorage og api calls
    private bool isLoaded = false; // bool til loaded status

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            userId = await LS.GetItemAsync<int>("userid"); // henter bruger id fra localstorage

            // Hent alle brugerens tasks
            tasks = await Http.GetFromJsonAsync<List<UsersTasksModel>>(
                $"api/userstasks/getuserstasks/{userId}"
            ) ?? new List<UsersTasksModel>(); // hvis API ikke returnere noget så lav en tom liste

            // Grupper og hent projektinfo
            await GroupTasksByProject();

            isLoaded = true; // ændre bool til true efter await GroupTasksByProject
            StateHasChanged();
        }
    }

    private async Task GroupTasksByProject() // metode til at gruppere tasks for projekter
    {
        groupedTasks.Clear(); // slet gammelt data

        // Find alle unikke projekt IDs andvender .Distinct metode til det
        var projectIds = tasks.Select(t => t.ProjectId).Distinct();

        foreach (var projectId in projectIds) // Foreach lykke til at kalde endpoint med alle unikke projekt id'er for at hente dataen
        {
            // Hent projektinfo via /api/{id}
            var project = await Http.GetFromJsonAsync<ProjectModel>($"api/{projectId}");

            // Lav gruppen med projekt + dens tasks
            groupedTasks.Add(new ProjectGroup
            {
                Project = project,
                Tasks = tasks.Where(t => t.ProjectId == projectId).ToList()
            });
        }
    }

    private async Task OpdaterStatus(int taskId, string status) // metode til at opdatere status på en opgave
    {
        if (string.IsNullOrEmpty(status)) return; // hvis status er tom retuner intet / gør intet
                                                // ellers kald api med nye status og dets task id
        var response = await Http.PutAsync($"/api/tasks/updatestatus/{taskId}/{status}", null);
        // hvis respone er ok altså 200-299 så gå videre
        if (response.IsSuccessStatusCode)
        {
            var task = tasks.FirstOrDefault(t => t.TaskId == taskId);
            if (task != null) task.Status = status;
        }

        // Opdater grupperne igen
        await GroupTasksByProject();
        StateHasChanged();
    }

    public class ProjectGroup // ny model som indeholder vores ProjectModel og UsersTasksModel
    {
        public ProjectModel? Project { get; set; }
        public List<UsersTasksModel> Tasks { get; set; } = new();
    }

    private string? filterProjectId = ""; // 
    private string? filterStatus = "";
    private string sortBy = "deadline";
    
    // Returner kun de grupper der matcher filtre
    private List<ProjectGroup> GetVisibleGroups()
    {
        if (string.IsNullOrEmpty(filterProjectId))
            return groupedTasks.ToList();

        int id = int.Parse(filterProjectId);
        return groupedTasks
            .Where(g => g.Project?.ProjectId == id)
            .ToList();
    }

    
    // Returner kun tasks der matcher filtre og sortering
    private IEnumerable<UsersTasksModel> GetVisibletasks(ProjectGroup group) // det er IEnumerable da vi kalder det i foreach lykken
    {
        var result = group.Tasks.AsEnumerable();
        
        //filtrer på status
        if (!string.IsNullOrEmpty(filterStatus))
            result = result.Where(t => t.Status == filterStatus);
        
        //Sortering
        if (sortBy == "deadline")
            result = result.OrderBy(t => t.Deadline);
        else if (sortBy == "status")
            result = result.OrderBy(t => t.Status);
        else
            result = result;

        return result;
    }
}
